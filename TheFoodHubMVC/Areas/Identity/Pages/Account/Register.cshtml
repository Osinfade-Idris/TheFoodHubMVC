@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var roles = (List<IdentityRole>)ViewData["roles"];
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Register New Staff</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Regkster New Staff</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">

    <form id="account" method="post">
        <div class="input_section">
            <p id="subhead">Please enter your details.</p>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text_wrap">
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" />         
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="text_wrap">
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <input asp-for="Input.LastName" class="form-control" aria-required="true" />                                
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="text_wrap">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />      
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

            <div class="text_wrap">
                    <label asp-for="Input.PhoneNo" class="form-label"></label>
                    <input asp-for="Input.PhoneNo" class="form-control" autocomplete="username" aria-required="true" />           
                    <span asp-validation-for="Input.PhoneNo" class="text-danger"></span>
                </div>

            <div class="text_wrap">
                    <label asp-for="Input.DOB" class="form-label"></label>
                    <input asp-for="Input.DOB" class="form-control" autocomplete="username" aria-required="true" />      
                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                </div>
        

        
            <div class="text_wrap">
                    <label asp-for="Input.Address" class="form-label"></label>
                    <input asp-for="Input.Address" class="form-control" autocomplete="username" aria-required="true" />           
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <div class="text_wrap">
                    <label asp-for="Input.Role" class="form-label"></label>
                    <select asp-for="Input.Role" class="form-control" asp-items='new SelectList(roles, "Id","Name")'></select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <div class="text_wrap">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="text_wrap">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="text_wrap">
                <button id="registerSubmit" type="submit" class="button">Register</button>
            </div>

             <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Click Here To Login</a>
        </div>
    </form>


 </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
