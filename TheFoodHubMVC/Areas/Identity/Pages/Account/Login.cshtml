@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div id="main">
    <div class="input_section">

        <h2 class="welcome">Welcome back </h2>
        <p id="subhead">Welcome back! Please enter your details.</p>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text_wrap">
                <label asp-for="Input.Email" class="email_label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="text_wrap">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="***************" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="button">Log in</button>
            </div>
        </form>


    </div>




    <div>
        <img id="object-position-1" src="/images/logo2.jpg" class="log" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}