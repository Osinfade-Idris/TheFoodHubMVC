@model IList<TheFoodHubMVC.Models.ApplicationUser>;

@{
    ViewData["Title"] = "All Staffs";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>All Staffs</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">All Staffs</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                    <th>Date Of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                        @*<a asp-action="Edit" asp-route-id="@item.Id">
                            <button type="button" class="btn btn-warning"><i class="bi bi-pen"></i></button>
                        </a>*@
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button type="button" Title="Delete Staff" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                        </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>