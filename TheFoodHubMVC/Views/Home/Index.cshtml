@model IEnumerable<TheFoodHubMVC.Models.ProductCategory>
@{
    ViewData["Title"] = "Home";
}
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="home-hero">
                <div class="home-hero-overlay">
                    <div class="content">
                        <h1>THE FOOD HUB<br /><span> Food &amp; Drinks  |   Pastries  |   Parfaits</span><br /></h1>
                        <div class="desc">
                            The Food Hub is committed to promoting your state of good health.
                            Count on us for hygienically processed healthy Foods & Drinks, Smoothies & Bites.
                        </div>

                        <button class="btn"><a asp-area="Identity" asp-page="/Account/Login">LOGIN</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <section class="dishes" id="categories">
    
    <div class="first-link-full-div">
        <div class="title-div">
            <h2>Our Product Categories</h2>
        </div>

        @foreach (var item in Model) {
        <div class="first-link-back">
            <div class="div">
                <div class="text">
                    <h3>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </h3>
                </div>
                <button class="btn" title="Shop Now">
                    <i class="fa fa-shopping-basket"></i> Shop Now
                </button>
            </div>
        </div>
        }
    </div>

</section>
</div>